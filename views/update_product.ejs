
<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/"><i class="fas fa-angle-double-left"></i> All Product</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update Product</h2>
            <span class="text-light">Use the below form to update the existing product</span>
        </div>

        <!-- form handling -->
<form  method="POST" id="update_product">
    <div class="new_product">
        <div class="form-group">
            <label for="product_name" class="text-light">Product Name</label>
            <input type="hidden" name="id" value="<%= product._id%>">
            <input type="text" name="product_name" value="<%= product.product_name%>" placeholder="Black Jeans">
        </div>
        <div class="form-group">
            <label for="product_price" class="text-light">Product Price</label>
            <input type="number" name="category_name" value="<%= product.product_price%>" placeholder="">
        </div>
        <div class="form-group">
            <label for="category_name" class="text-light">Category</label>
            <input type="text" name="category_name" value="<%= product.category_name%>" placeholder="Jeans">
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form> 
                      
    </div>
</main>
<!-- /Main Site -->

<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->