
<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/category"><i class="fas fa-angle-double-left"></i> All Category</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">New Category</h2>
            <span class="text-light">Use the below form to add a new category</span>
        </div>

<!-- form handling -->
<form action="/api/category" method="POST" id="add_category">
    <div class="new_product">
        <div class="form-group">
            <label for="category_name" class="text-light">Category Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="category_name" value="" placeholder="Clothes">
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Add</button>
        </div>

    </div>
</form>           
    </div>
</main>
<!-- /Main Site -->

